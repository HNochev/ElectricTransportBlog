@using ElectricTransportBlog.Core.Models.Home
@model HomePageModel

<a asp-controller="Publication" asp-action="All"><img class="img-fluid" src="~/img/Banner2.jpg" width="100%" alt="Банер"></a>
<br />
<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="text-center">Последни публикации</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var publication in Model.Publications)
                            {
                                <div class="row border border-primary">
                                    <div class="col-md-3">
                                        <a asp-controller="Publication" asp-action="Details" asp-route-id="@publication.Id"><img class="img-fluid" src="@publication.ImgUrlFormDatabase" width="100%" alt="Снимка"></a>
                                    </div>
                                    <div class="col-md-9" style="border-bottom:32px">
                                        <div class="card-body">
                                            <h5 class="text-center bg-primary"><a asp-controller="Publication" asp-action="Details" asp-route-id="@publication.Id">@publication.Title</a></h5>
                                            <p class="card-text">@publication.Description <a asp-controller="Publication" asp-action="Details" asp-route-id="@publication.Id" class="btn-sm btn-outline-primary float-right">Прочети още</a></p>
                                            <div class="row">
                                                <p class="card-text"><small class="text-muted">@publication.Date.ToString("D")</small></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>