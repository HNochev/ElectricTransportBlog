@using ElectricTransportBlog.Core.Models.Line
@model LineEditFormModel

@{
    ViewData["Title"] = "Редактирай линия";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Редакатирай линия</h3>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row">
                    <div class="form-group col-4">
                        <label asp-for="Number"></label>
                        <input asp-for="Number" class="form-control" placeholder="Добавете номер">
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group col-8">
                        <label asp-for="ShortLineDescription"></label>
                        <input asp-for="ShortLineDescription" class="form-control" placeholder="Добавете кратък маршрут">
                        <span asp-validation-for="ShortLineDescription" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LineTypeId" class="control-label"></label>
                        <select asp-for="LineTypeId" class="form-control">
                        @foreach (var lineTypes in Model.LineTypes)
                        {
                            <option class="@lineTypes.ClassColor" value="@lineTypes.Id">@lineTypes.TypeOfVehicle</option>
                        }
                        </select>
                        <span asp-validation-for="LineTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LineDescription"></label>
                        <textarea asp-for="LineDescription" class="form-control" rows="3" placeholder="Добавете описание"></textarea>
                        <span asp-validation-for="LineDescription" class="text-danger"></span>
                    </div>
                    <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="WorkDayInterval"></label>
                        <input asp-for="WorkDayInterval" class="form-control" placeholder="Добавете делничен интервал в минути">
                        <span asp-validation-for="WorkDayInterval" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="WeekendInterval"></label>
                        <input asp-for="WeekendInterval" class="form-control" placeholder="Добавете празничен интервал в минути">
                        <span asp-validation-for="WeekendInterval" class="text-danger"></span>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <a asp-controller="TransportNetwork" asp-action="All" class="btn btn-secondary">Отказ</a>
                    <input asp-page-handler="Upload" class="btn btn-warning float-right" type="submit" value="Редактирай">
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}