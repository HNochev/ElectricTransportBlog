@using ElectricTransportBlog.Core.Models.TransportNetwork
@model TransportNetworkPaginationModel

@{
    ViewBag.Title = "Транспортни Мрежи";
}

@if (!Model.TransportNetworks.Any())
{
    <h2 class="text-center">В сайта все още няма добавени транспортни мрежи!</h2>
}
else
{
    <div class="row">
        @foreach (var transportNetwork in Model.TransportNetworks)
        {
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="product-title"><a asp-controller="TransportNetwork" asp-action="Details" asp-route-id="@transportNetwork.Id">@transportNetwork.Town</a></h3>
                    </div>
                    <div class="card-body">
                        <article>
                            <header class="entry-header">
                                <meta http-equiv="Content-Type" content="text/html; charset=windows-1251">
                                <div class="entry-thumbnail">
                                    <img class="img-fluid" style="height:400px; width:100%; object-fit:contain;" src="@transportNetwork.ImgUrlFormDatabase" alt="Снимка">
                                </div>
                                <b class="comments-count float-right">Брой линии: @transportNetwork.LinesCount</b>
                            </header>
                            <div class="entry-content">
                                <p class="short-content">
                                    @transportNetwork.Description
                                </p>
                                <a asp-controller="TransportNetwork" asp-action="Details" asp-route-id="@transportNetwork.Id" class="btn btn-primary float-right">Прочети още</a>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        }
    </div>
    <paging page-no="Model.PageNo"
        page-size="Model.PageSize"
        total-records="Model.TotalRecords"
        page-size-dropdown-items="2-5-10">
    </paging>
}