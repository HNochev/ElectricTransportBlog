@using ElectricTransportBlog.Core.Models.TransportNetwork
@model TransportNetworkDeleteModel

@{
    ViewData["Title"] = "Изтриване на мрежа";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Сигурен ли сте, че искате да изтриете мрежата на град:</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group text-center">
                        <h3 class="text-center" asp-for="Title">@Model.Town</h3><br>
                        <img class="img-fluid" src="@Model.ImgUrlFormDatabase" alt="Снимка">
                    </div>
                </div>
                <div class="card-body">
                    <a asp-controller="TransportNetwork" asp-action="All" class="btn btn-secondary">Отказ</a>
                    <button type="submit" class="btn btn-danger float-right">Изтрий</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}